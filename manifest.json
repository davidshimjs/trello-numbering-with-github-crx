{
  "manifest_version": 2,
  "name": "Trello with Github",
  "version": "0.0.1",
  "description": "Using a number of trello card with github commit log",
  "version": "1.0",
  "permissions": [
    "tabs",
    "https://github.com/",
    "https://trello.com/",
    "https://api.trello.com/"
  ],
  "icons": {
    "128": "img/icon_128.png"
  },
  "background": {
    "scripts": [
      "jquery.1.7.1.min.js",
      "client.js",
      "background.js"
    ]
  },
  "externally_connectable": {
    "matches": ["https://trello.com/*"]
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://trello.com https://api.trello.com; object-src 'self'",
  "browser_action": {
    "default_icon": {
      "19": "img/icon_19.png",
      "38": "img/icon_38.png"
    },
    "default_title": "Trello with Github",
    "default_popup": "popup.html"
  },
  "options_page": "popup.html",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "include_globs": ["https://*github*/*"],
    "css": ["github.css"],
    "js": ["github.js"]
  }, {
    "matches": ["https://trello.com/*"],
    "css": ["trello.css"],
    "js": ["trello.js"],
    "run_at": "document_end"
  }, {
    "matches": ["https://trello.com/1/token/approve"],
    "js": ["trello_approve.js"],
    "run_at": "document_end"
  }]
}